# Domain configuration
DOMAIN=wealth.example.com
ACME_EMAIL=admin@example.com

# HTTP Basic Auth (generate with: htpasswd -nB admin)
# Format: user:$2y$... (bcrypt hash)
# Note: Double $$ for docker-compose escaping
HTPASSWD=admin:$$2y$$05$$example_hash_replace_me

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_USER=wealth
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=wealth_db

# Django database connection (dj-database-url format)
# Note: Password must be duplicated here (no variable interpolation in .env)
DATABASE_URL=postgres://wealth:change_me_in_production@wealth-db:5432/wealth_db

# ============================================
# Django
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=change_me_generate_a_secure_key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=wealth.example.com,localhost

# Encryption key for credentials (REQUIRED)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIAL_ENCRYPTION_KEY=change_me_generate_fernet_key

# Static and media files (must match nginx volume mounts)
STATIC_ROOT=/var/www/public/static
MEDIA_ROOT=/var/www/public/media

# ============================================
# CORS & CSRF
# ============================================
CORS_ALLOWED_ORIGINS=https://wealth.example.com
CSRF_TRUSTED_ORIGINS=https://wealth.example.com

# ============================================
# Django Admin & Error Notifications
# ============================================
# Format: Name:email,Name2:email2
ADMINS=Admin:admin@example.com

# ============================================
# Email (for weekly reports and error notifications)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
# TLS vs SSL: Use only ONE of these, not both
# EMAIL_USE_TLS=True  -> STARTTLS on port 587 (most common)
# EMAIL_USE_SSL=True  -> Implicit SSL on port 465
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=change_me_email_password
DEFAULT_FROM_EMAIL=Wealth Tracker <noreply@example.com>
ADMIN_EMAIL=admin@example.com
